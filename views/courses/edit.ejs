<div class="page">
  <header class="page-header">
    <div>
      <h1>Edit Course</h1>
      <p class="muted">Course ID: <%= course.id %></p>
    </div>

    <div class="header-actions">
      <a class="btn-secondary" href="/courses/<%= course.id %>">View</a>
      <a class="link" href="/courses">‚Üê Back to Courses</a>
    </div>
  </header>

  <% if (error) { %>
    <div class="error"><%= error %></div>
  <% } %>

  <!-- Update form (inputs only) -->
  <form id="course-edit-form" class="form" method="POST" action="/courses/<%= course.id %>">
    <label class="label">
      Title
      <input class="input" type="text" name="title" value="<%= form.title %>" required>
    </label>

    <label class="label">
      Description
      <textarea class="textarea" name="description" rows="6" required><%= form.description %></textarea>
    </label>
  </form>

  <!-- Actions row (two separate forms / submit targets) -->
  <div class="card-actions">
    <button class="btn" type="submit" form="course-edit-form">Save</button>

    <form method="POST" action="/courses/<%= course.id %>/delete" class="inline-form"
          onsubmit="return confirm('Delete this course and all its lessons?');">
      <button class="btn-danger" type="submit">Delete</button>
    </form>
  </div>
</div>
